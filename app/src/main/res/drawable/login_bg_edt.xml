<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="@dimen/control_spliter_width"
                android:color="#9e91a3" />

            <solid android:color="#eae9e7" />
            <corners android:radius="@dimen/padding_44" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape>
            <stroke
                android:width="@dimen/control_spliter_width"
                android:color="#eae9e7" />

            <solid android:color="#eae9e7" />
            <corners android:radius="@dimen/padding_44" />
        </shape>
    </item>

</selector>
