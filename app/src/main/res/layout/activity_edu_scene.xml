<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_edu_scene"
    android:fitsSystemWindows="true"
    tools:context="com.zritc.colorfulfund.activity.scene.ZRActivityEduScene">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding_30"
        android:paddingRight="@dimen/padding_30">

        <com.zritc.colorfulfund.ui.pull2refresh.ZRPullToRefreshListView
            android:id="@+id/pull_to_refresh_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000" />

        <ImageButton
            android:id="@+id/btn_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/padding_30"
            android:background="@null"
            android:src="@mipmap/btn_left_back" />

    </FrameLayout>

    <View
        android:id="@+id/view_shaow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shadow_gray2"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/composer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <com.zritc.colorfulfund.view.animation.InOutRelativeLayout
            android:id="@+id/composer_buttons_wrapper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:clipChildren="false"
            android:clipToPadding="false">

            <com.zritc.colorfulfund.view.animation.InOutImageButton
                android:id="@+id/composer_button_store_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14dp"
                android:layout_marginRight="130dp"
                android:background="@mipmap/icon_menu_store_money"
                android:visibility="gone" />

            <com.zritc.colorfulfund.view.animation.InOutImageButton
                android:id="@+id/composer_button_groupup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="98dp"
                android:layout_marginRight="99dp"
                android:background="@mipmap/icon_menu_groupup"
                android:visibility="gone" />

            <com.zritc.colorfulfund.view.animation.InOutImageButton
                android:id="@+id/composer_button_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="138dp"
                android:layout_marginRight="14dp"
                android:background="@mipmap/icon_menu_photos"
                android:visibility="gone" />

        </com.zritc.colorfulfund.view.animation.InOutRelativeLayout>

        <com.zritc.colorfulfund.view.animation.InOutRelativeLayout
            android:id="@+id/composer_buttons_show_hide_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/composer_buttons_show_hide_button_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_menu_scene_normal" />
        </com.zritc.colorfulfund.view.animation.InOutRelativeLayout>
    </RelativeLayout>

</RelativeLayout>
