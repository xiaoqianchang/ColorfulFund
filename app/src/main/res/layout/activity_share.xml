<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_share_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/view_share_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/shadow_gray" />

    <LinearLayout
        android:id="@+id/view_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/app_bg"
        android:orientation="vertical">

        <include
            layout="@layout/view_share" />

        <Button
            android:id="@+id/btn_share_cancel"
            android:layout_width="match_parent"
            android:textSize="@dimen/font_size_17"
            android:layout_height="@dimen/height_88"
            android:background="@color/white"
            android:text="@string/btn_cancel"
            android:textColor="@color/ltblack" />
    </LinearLayout>

</RelativeLayout>