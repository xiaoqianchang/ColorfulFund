<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".activity.TestNetApiActivity">

    <Button
        android:id="@+id/btn_prepareRegisterAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="预注册(获取验证码)"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_registerAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="注册"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="登录"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_prepare_bind_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="预绑卡"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_bind_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="绑卡"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_unbind_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="解绑"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_setTransPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="设置交易密码"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_group_redemption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="组合赎回"
        android:textColor="@android:color/black"/>

</LinearLayout>
