<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context=".activity.TestNetApiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
        android:id="@+id/btn_prepareRegisterAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="预注册(获取验证码)"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_registerAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="注册"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="登录"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_prepare_bind_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="预绑卡"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_bind_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="绑卡"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_unbind_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="解绑"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_setTransPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="设置交易密码"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_estimateBuyFundFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="估算申购费用"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_buy_po"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="组合申购"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_user_bank_cards4C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="获取用户已绑定的银行卡列表"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_user_po_list4C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="获取我的基金列表"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_user_po_info4C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="获取我的基金信息"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_fund_po_list4C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="获取基金列表"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_fund_po_info4C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="获取基金信息"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_single_redemption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="单个赎回"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_group_redemption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="组合赎回"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_article_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="文章详情"
        android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_video_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="视频详情"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_call_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="调用相机/相册功能"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_record_growth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="点击图片记录成长"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_generate_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="成长相册"
            android:textColor="@android:color/black"/>

</LinearLayout>
</ScrollView>
