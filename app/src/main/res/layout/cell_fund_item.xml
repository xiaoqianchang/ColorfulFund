<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zrt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_88"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/padding_30"
    android:paddingRight="@dimen/padding_30">

    <TextView
        android:id="@+id/id_txt_money"
        style="@style/ltblack_text_font_14_style"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:text="0.00元" />

    <TextView
        android:id="@+id/id_txt_name"
        style="@style/ltblack_text_font_14_style"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_toLeftOf="@+id/id_txt_money"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="基金名称" />

</RelativeLayout>