<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_40"
            android:layout_marginTop="@dimen/padding_54"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_time_dd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="今天"
                android:textColor="#494a4e"
                android:textSize="@dimen/font_size_13" />

            <TextView
                android:id="@+id/text_time_hh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_12"
                android:gravity="center"
                android:text="07:30"
                android:textColor="#818386"
                android:textSize="@dimen/font_size_10" />

        </LinearLayout>

        <com.zritc.colorfulfund.widget.TimeLineMarker
            android:id="@+id/time_line_mark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_30"
            android:paddingTop="@dimen/padding_54"
            app:beginLine="#ff6600"
            app:endLine="#ff6600"
            app:lineSize="2dp"
            app:marker="@mipmap/icon_timeline_point" />

        <!--app:markerSize="@dimen/padding_30"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_30"
                    android:layout_marginTop="@dimen/padding_40"
                    android:src="@mipmap/icon_timeline_ex_fb" />

                <TextView
                    android:id="@+id/text_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_22"
                    android:layout_marginTop="@dimen/padding_54"
                    android:text="专家意见"
                    android:textColor="#606060"
                    android:textSize="@dimen/font_size_13" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/control_divider_height"
                android:layout_marginTop="@dimen/padding_20"
                android:background="#e2e4e9" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_70"
                android:layout_marginLeft="@dimen/padding_30"
                android:layout_marginRight="@dimen/padding_30"
                android:layout_marginTop="@dimen/padding_44"
                android:lineSpacingExtra="1.5dp"
                android:lineSpacingMultiplier="1.1"
                android:text="机构行为观察：一般来讲，机构"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_14" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>