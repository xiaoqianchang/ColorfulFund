<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_230"
    android:background="#fcfcfc"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_video"
        android:layout_width="@dimen/width_144"
        android:layout_height="@dimen/height_218"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/select_album_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_toRightOf="@id/rl_video"
        android:src="@mipmap/icon_del" />

</RelativeLayout>