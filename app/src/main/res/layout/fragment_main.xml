<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <LinearLayout
        android:id="@+id/view_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_30"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="我的银行卡" />

        <Button
            android:id="@+id/btn_single_redemption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="单个赎回"

android:textColor="@android:color/black"                                                                        android:visibility="gone"/>

        <Button
            android:id="@+id/btn_user_po_list4C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="我的基金列表"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <include
        android:id="@+id/view_loading_container"
        layout="@layout/view_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>