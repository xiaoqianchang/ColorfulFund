<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_180"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_30"
        android:layout_marginTop="@dimen/padding_32"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="组合名称"
            android:textColor="#0c0c0c"
            android:textSize="@dimen/font_size_15"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="余额"
            android:textColor="#0c0c0c"
            android:textSize="@dimen/font_size_15"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_30"
        android:layout_marginBottom="@dimen/padding_40"
        android:layout_below="@id/ll_name_container"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="华夏成长1号"
            android:textColor="#5b6cbd"
            android:textSize="@dimen/font_size_17"/>

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            tools:text="￥30000.00"
            android:textColor="#5b6cbd"
            android:textSize="@dimen/font_size_18"/>
    </LinearLayout>
</RelativeLayout>