<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/padding_16"
        android:layout_height="@dimen/padding_16"
        android:background="@drawable/bg_wish_point"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_marginBottom="@dimen/padding_12"
        android:text="存钱中"
        android:textColor="#40666a"
        android:textSize="@dimen/font_size_13"/>

    <TextView
        android:layout_width="@dimen/height_4"
        android:layout_height="@dimen/padding_22"
        android:background="#40666a"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.zritc.colorfulfund.widget.SateliteMenu
            android:id="@+id/sateliteMenu"
            android:layout_width="@dimen/width_280"
            android:layout_height="@dimen/width_280"
            android:layout_marginTop="@dimen/padding_12"
            android:layout_marginBottom="@dimen/padding_12"
            android_custom:position="right_top"
            android_custom:radius="100dp">

            <!--菜单主按钮-->
            <LinearLayout
                android:id="@+id/ll_saving_money"
                android:layout_width="@dimen/width_280"
                android:layout_height="@dimen/width_280"
                android:layout_marginTop="@dimen/padding_12"
                android:layout_marginBottom="@dimen/padding_12"
                android:gravity="center"
                android:background="@mipmap/bg_red_wish"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_28"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_8"
                        android:text="%"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_16"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_14"
                    android:text="塞班岛豪华邮轮游"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_16"
                    android:text="目标金额"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/tv_target_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_12"
                    android:text="3.5万"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_14"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete"
                android:tag="1" />
        </com.zritc.colorfulfund.widget.SateliteMenu>

        <com.zritc.colorfulfund.widget.RoundProgressBar
            android:id="@+id/roundProgressBar"
            android:layout_width="@dimen/width_260"
            android:layout_height="@dimen/width_260"
            android:layout_centerInParent="true"
            android_custom:roundColor="@color/transparent"
            android_custom:roundProgressColor="@color/white"
            android_custom:roundWidth="2dip"
            android_custom:max="100"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_end_marker"
        android:layout_width="@dimen/height_4"
        android:layout_height="@dimen/padding_22"
        android:background="#40666a"/>
</LinearLayout>