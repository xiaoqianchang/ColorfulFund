<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/padding_16"
        android:layout_height="@dimen/padding_16"
        android:background="@drawable/bg_wish_point"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_marginBottom="@dimen/padding_12"
        android:text="存钱中"
        android:textColor="#40666a"
        android:textSize="@dimen/font_size_13"/>

    <TextView
        android:layout_width="@dimen/height_4"
        android:layout_height="@dimen/padding_22"
        android:background="#40666a"/>

    <LinearLayout
        android:id="@+id/ll_saving_money"
        android:layout_width="@dimen/width_280"
        android:layout_height="@dimen/width_280"
        android:layout_marginTop="@dimen/padding_12"
        android:layout_marginBottom="@dimen/padding_12"
        android:gravity="center"
        android:background="@drawable/bg_wish_point"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_28"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_8"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16"
            android:text="塞班岛豪华邮轮游"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16"
            android:text="目标金额"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_12"
            android:text="3.5万"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14"/>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/height_4"
        android:layout_height="@dimen/padding_22"
        android:background="#40666a"/>
</LinearLayout>