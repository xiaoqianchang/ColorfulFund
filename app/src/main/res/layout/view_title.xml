<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_88"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.zritc.colorfulfund.ui.ZRTextView
        android:id="@+id/draw_left"
        style="@style/ZRText.Medium.Gray"
        android:layout_width="@dimen/width_88"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_30"
        android:background="@drawable/bg_cell_selector"
        android:drawableLeft="@mipmap/btn_back"
        android:gravity="center|left"
        android:visibility="visible" />

    <com.zritc.colorfulfund.ui.ZRButton
        android:id="@+id/btn_left"
        widget:style="title_left"
        android:layout_width="@dimen/width_88"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minEms="4"
        android:visibility="gone" />

    <com.zritc.colorfulfund.ui.ZRTextView
        android:id="@+id/text_title"
        style="@style/ZRText.Large.Gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/img_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:visibility="gone" />

    <com.zritc.colorfulfund.ui.ZRNumButton
        android:id="@+id/btn_right"
        android:layout_width="@dimen/width_88"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/img_right"
        android:layout_width="@dimen/width_88"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_cell_selector"
        android:contentDescription="@string/app_name"
        android:visibility="visible" />

</LinearLayout>