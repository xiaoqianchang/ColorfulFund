<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_54"
    android:paddingTop="@dimen/padding_54">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gpv_normal"
        android:layout_centerHorizontal="true"
        android:text="请输入6位验证码"
        android:textSize="@dimen/font_size_15" />

    <com.zritc.colorfulfund.ui.ZRGridPasswordView
        android:id="@+id/gpv_normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_88"
        android:layout_marginBottom="@dimen/padding_30"
        android:layout_marginLeft="@dimen/padding_20"
        android:layout_marginRight="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_30" />

    <Button
        android:id="@+id/btn_send_verifycode"
        style="@style/gray_button_style"
        android:layout_width="@dimen/width_160"
        android:layout_height="@dimen/height_58"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/padding_20"
        android:text="发送验证码"
        android:textSize="@dimen/font_size_12" />

</LinearLayout>