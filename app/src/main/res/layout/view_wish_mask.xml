<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_add_wish"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/padding_15"
        android:src="@mipmap/mask_add_wish" />

    <ImageView
        android:id="@+id/img_wish_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_add_wish"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_54"
        android:layout_toLeftOf="@id/img_add_wish"
        android:src="@mipmap/mask_wish" />

</RelativeLayout>